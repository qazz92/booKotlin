<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.donga.examples.boomin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.donga.examples.boomin.activity.ResActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.FirstActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.donga.examples.boomin.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.NoticeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.RoomActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.EmptyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.StudentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.ProActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.ProSubActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.HelpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.PushActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.ManageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.AttendActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.WisperActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.donga.examples.boomin.activity.Wisper_NoticeDialogActivity"
            android:theme="@android:style/Theme.Panel" />
        <activity
            android:name="com.donga.examples.boomin.activity.ManageLoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.donga.examples.boomin.activity.Wisper_OkDialogActivity"
            android:theme="@android:style/Theme.Panel" />
        <activity
            android:name="com.donga.examples.boomin.activity.SelectDialogActivity"
            android:theme="@android:style/Theme.Panel"/>
        <activity
            android:name="com.donga.examples.boomin.activity.SendDialogActivity"
            android:theme="@android:style/Theme.Panel"/>
        <activity
            android:name="com.donga.examples.boomin.activity.AlertDialogActivity"
            android:theme="@android:style/Theme.Panel" />

        <!-- [START firebase_service] -->
        <service
            android:name="com.donga.examples.boomin.firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->
        <!-- [START firebase_iid_service] -->
        <service
            android:name="com.donga.examples.boomin.firebase.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!-- [END firebase_iid_service] -->

        <service
            android:name="com.donga.examples.boomin.MinServiceClass"
            android:enabled="true"
            android:exported="false"></service>
    </application>

</manifest>