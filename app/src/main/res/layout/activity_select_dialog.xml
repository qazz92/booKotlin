<?xml version="1.0" encoding="utf-8"?><!-- 동아리선택 dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/five"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/select" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="학과"
            android:textColor="#000" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/select_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_select"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></ListView>

    <android.support.v7.widget.CardView
        android:id="@+id/select_btn_ok"
        android:layout_width="66dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/five"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <Button
            android:id="@+id/select_btn_ok_btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#000000FF"
            android:text="확인"
            android:textColor="#fff" />
    </android.support.v7.widget.CardView>
</LinearLayout>