<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="16dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wisper_notice_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:text="동아리이름"
            android:textColor="#000"
            android:textSize="18dp" />
        <View
            android:id="@+id/name_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/wisper_notice_name"
            android:background="#ececec"/>

        <EditText
            android:id="@+id/wisper_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:text="제목"
            android:textColor="#000"
            android:layout_below="@+id/name_view"
            android:textSize="18dp" />
        <View
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/wisper_notice_title"
            android:background="#ececec"/>

        <TextView
            android:id="@+id/wisper_notice_content"
            android:layout_width="match_parent"
            android:layout_below="@id/title_view"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="내용"
            android:background="@null"
            android:textColor="#000"
            android:textSize="18dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/wisper_notice_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/wisper_notice_content"
            app:cardBackgroundColor="#9bc2d4"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#9bc2d4"
                android:text="확인"
                android:textColor="#fff"
                android:textSize="18dp" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>